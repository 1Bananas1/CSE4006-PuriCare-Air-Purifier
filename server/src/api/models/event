const mongoose = require("mongoose");

const eventSchema = new mongoose.Schema(
  {
    userId: {
      type: mongoose.Schema.Types.ObjectId,
      ref: "User",
      required: true,
    },
    deviceID: {
      type: mongoose.Schema.ObjectId,
      ref: "user",
      required: true,
    },
    event: {
      type: String,
      required: true,
    },
    person: {
      type: String,
    },
  },
  {
    timestamp: true,
  }
);

module.exports = mongoose.model("event", eventSchema);
